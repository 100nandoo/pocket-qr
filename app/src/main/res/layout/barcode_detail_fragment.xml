<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/material_baseline_grid_1x"
    tools:context="com.nandoo.pocketqr.features.barcode.ui.detail.BarcodeDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_label"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:layout_width="match_parent"
            android:drawableEnd="@drawable/ic_barcode_edit"
            android:layout_marginTop="@dimen/material_baseline_grid_4x"
            android:layout_marginBottom="@dimen/material_baseline_grid_4x"
            android:layout_height="wrap_content"
            tools:text="Tiong Bahru QR" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_detail_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_detail_content"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1234" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/extended_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_margin="@dimen/material_baseline_grid_2x"
        android:contentDescription="@string/content_desc_action"
        app:icon="@drawable/ic_barcode_forward"
        tools:text="@string/content_desc_action" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>