<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_white_rounded_effect"
    android:layout_marginStart="@dimen/material_baseline_grid_1x"
    android:layout_marginEnd="@dimen/material_baseline_grid_1x"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/material_baseline_grid_1x">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/material_baseline_grid_3x"
        android:layout_height="@dimen/material_baseline_grid_3x"
        android:layout_marginStart="@dimen/material_baseline_grid_1x"
        android:contentDescription="icon"
        app:tint="@color/secondaryColor"
        tools:src="@drawable/ic_barcode_url" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            style="@style/TypefaceH6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/material_baseline_grid_2x"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="Reddit" />

        <TextView
            android:id="@+id/tv_subtitle"
            style="@style/TypefaceSubtitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/material_baseline_grid_2x"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="www.reddit.com/r/askmeanything/thisisverylongurl/soincancheckconat" />

    </LinearLayout>

</LinearLayout>