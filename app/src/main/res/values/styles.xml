<resources>
    <!-- Base application theme. -->
    <style name="Theme.AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorSurface">@color/material_color_white</item>
        <item name="colorOnSurface">?attr/colorPrimaryVariant</item>

        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="android:windowBackground">@color/material_color_grey_200</item>
        <item name="actionModeBackground">@color/secondaryColor</item>
        <item name="android:colorBackground">@color/material_color_white</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.AppTheme.MediumComponent</item>
    </style>

    <style name="ShapeAppearance.AppTheme.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/material_color_white</item>
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
    </style>

    <style name="TypefaceButton">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/work_sans_medium</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColorPrimary">@color/material_color_white</item>
        <item name="backgroundTint">@color/primaryColor</item>
    </style>

    <style name="PopupTheme" parent="@style/ThemeOverlay.MaterialComponents.Light">
        <item name="android:textColor">@color/material_color_black</item>
    </style>

</resources>