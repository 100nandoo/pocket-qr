<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="android:windowBackground">@color/material_color_grey_200</item>
    </style>

    <style name="TypefaceButton">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/work_sans_medium</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColorPrimary">@color/material_color_white</item>
        <item name="backgroundTint">@color/primaryColor</item>
    </style>

</resources>